
<div class="form-container">
	<span class="span12">Add FIN11 records before generating a FIN11 file. TIDs for each record must be unique for each MID.</span>
	<%= form_tag nil, id: 'filename_form', remote: true do %>

	<div class="first-fields span12">

		<table class="form-fields span6" align="center">
			<tr>
				<td><%= label_tag :"base-currency-code", "Base Currency Code" %></td>
				<td><%= select_tag :"base-currency-code", options_for_select(["KRW", "USD"]), include_blank: "", class: "required" %></td>
			</tr>
			<tr>
				<td><%= label_tag :version, "Version" %></td>
				<td><%= text_field_tag :version, nil, minlength: 4, maxlength: 4, class: "required digits" %></td>
			</tr>
		</table>
	
		<table class="form-fields span6" align="center">
			<tr>
				<td><%= label_tag :"fcc-acquirer-id", "FCC Acquirer ID" %></td>
				<td><%= select_tag :"fcc-acquirer-id",  options_for_select(["0301", "0302", "0303", "0304"]), class: "required" %></td>
			</tr>
		</table>

	</div>
	<% end %>

